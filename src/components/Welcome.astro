---
import logo from '../assets/images/logo-negative.svg';
import bombo from '../assets/images/bugs/bombo.svg';
import libellula from '../assets/images/bugs/libellula.svg';
import coccinella from '../assets/images/bugs/coccinella.svg';
import instagramIcon from '../assets/images/social/instagram.svg';
import background from '../assets/images/background.png';
---

<div id="container">
    <img id="background" src={background.src} alt="Background" loading="lazy" decoding="async" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;" />
    <main>		
        <section id="welcome">			
            <a href="https://www.pollinaction.com" aria-label="Vai alla homepage di PollinAction">
                <img src={logo.src} width="300" alt="PollinAction Homepage" decoding="async" />
            </a>
            <section id="links">
                <a class="shaded social-link" href="https://instagram.com/pollinaction_" target="_blank" rel="noopener noreferrer">
                    <img src={instagramIcon.src} width="24" height="24" alt="Instagram" decoding="async" />
                    <span>pollinaction_</span>
                </a>
                <a class="shaded" href="mailto:team@pollinaction.com">team@pollinaction.com</a>
            </section>
        </section>
        <section id="bugs" aria-hidden="true">
            <img class="bug" src={bombo.src} width="100" height="100" alt="Bombo" loading="lazy" decoding="async" />
            <img class="bug" src={libellula.src} width="100" height="100" alt="Libellula" loading="lazy" decoding="async" />
            <img class="bug" src={coccinella.src} width="100" height="100" alt="Coccinella" loading="lazy" decoding="async" />
        </section>
    </main>
</div>

<style>	
    #container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100vw;
        color: white;
        font-family: Montserrat, sans-serif;
        text-align: center;		
    }

    .shaded {
        text-shadow: 4px 4px 2px rgba(0, 0, 0, 0.5);
        color: rgb(223, 221, 207);
    }
    
    h2 {
        font-style: italic;
    }
    
    #links {
        margin: 4rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        font-style: italic;
    }
    #links a {
        text-decoration: underline;
        font-weight: bold;
        transition: color 0.3s ease;
        font-size: 1.5rem;
    }

    #bugs {			
        bottom: 20px;
        display: flex;
        background-color: rgb(223, 221, 207);
        border-radius: 50vh;
    }
    
    .bug {
        padding: 25px 30px;
    }
    
    .social-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: center;
    }
    
    .social-link img {
        filter: invert(93%) sepia(8%) saturate(164%) hue-rotate(18deg) brightness(93%) contrast(90%) drop-shadow(4px 4px 2px rgba(0, 0, 0, 0.5));
    }	
</style>
