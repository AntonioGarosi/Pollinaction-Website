---
import logo from '../assets/images/logo-negative.svg';
import font from '../assets/fonts/Montserrat/Montserrat-VariableFont_wght.ttf';
import bombo from '../assets/images/bugs/bombo.svg';
import libellula from '../assets/images/bugs/libellula.svg';
import coccinella from '../assets/images/bugs/coccinella.svg';
import instagramIcon from '../assets/images/social/instagram.svg';
---

<div id="container">
	<main>
		<section id="welcome">
			<a href="https://www.pollinaction.com">
				<img src={logo.src} width="400" alt="PollinAction Hompage"/>
			</a>
			<section id="links">
				<a class="shaded social-link" href="pollinaction_" target="_blank">
					<img src={instagramIcon.src} width="24" height="24" alt="Instagram"/>
					<span>pollinaction_</span>
				</a>
				<a class="shaded" href="mailto:team@pollinaction.com">team@pollinaction.com</a>
			</section>
		</section>
		<section id="bugs">
			<img class="bug" src={bombo.src} width="100" alt="Bombo"/>
			<img class="bug" src={libellula.src} width="100" alt="Libellula"/>
			<img class="bug" src={coccinella.src} width="100" alt="Coccinella"/>
		</section>
	</main>
</div>

<style>
	@font-face {
		font-family: 'Montserrat';
		src: url({font}) format('truetype');
		font-weight: normal;
		font-style: normal;
	}
	
	#container {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		width: 100vw;
		color: white;
		font-family: Montserrat, sans-serif;
		text-align: center;
	}
	
	.shaded {
		text-shadow: 6px 6px 2px rgba(0, 0, 0, 0.5);
		color:rgb(223, 221, 207)
	}
	
	h2 {
		font-style: italic;
	}
	
	#links {
		margin: 4rem;
		display: flex;
		flex-direction: column;
		gap: 2rem;
		font-style: ita;
		
		a {
			text-decoration: underline;
			font-weight: bold;
			transition: color 0.3s ease;
			font-size: 1.5rem;
		}
	}
	
	#bugs {
		margin-top: 40px;
		bottom: 20px;
		right: 20px;
		display: flex;
		background-color: rgb(223, 221, 207);
		border-radius: 50vh
	}
	
	.bug {
		padding: 25px 30px 25px 30px;
	}
	
	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		justify-content: center;
	}
	
	.social-link img {
    filter: invert(93%) sepia(8%) saturate(164%) hue-rotate(18deg) brightness(93%) contrast(90%)
           drop-shadow(6px 6px 2px rgba(0, 0, 0, 0.5));
	}	
</style>
