---
import { getLangFromUrl, useTranslations } from "../i18n/utils"

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

import unit1 from '../assets/images/bugs/libellula.svg?url';
import unit2 from '../assets/images/bugs/bombo.svg?url';
import unit3 from '../assets/images/bugs/coccinella.svg?url';

import arrow from '../assets/images/arrow.svg?url';
---

<div class="container">
  <div class="unit" id="u1">
    <div class="icon">
      <img src={unit1} />
    </div>
    <h3>{t('bu.u1.title')}</h3>
    <p>{t('bu.u1.description')}</p>
  </div>

  <div class="unit" id="u2">
    <div class="icon">
      <img src={unit2} />
    </div>
    <h3>{t('bu.u2.title')}</h3>
    <p>{t('bu.u2.description')}</p>
  </div>

  <div class="unit" id="u3">
    <div class="icon">
      <img src={unit3} />
    </div>
    <h3>{t('bu.u3.title')}</h3>
    <p>{t('bu.u3.description')}</p>
  </div>

  <div id="arrow">
    <img src={arrow} />    
  </div>
</div>

<style lang="scss">
  @use '../assets/style/main.scss' as vars;

  .container {
    position: relative;
    padding: 0px;    
    display: flex;
    flex-direction: row;
  }
  
  h3 {
    margin-bottom: 20px;
  }

  p {
    margin: 0px;
    line-height: 1.25;    
  }

  .unit {
    width: 95%;
    position: relative;
    padding: 100px 50px 40px 50px;
    display: flex;
    flex-direction: column;
    color: white;
  }

  #u1 {
    background-color: vars.$color-green;
  }

  #u2 {
    background-color: vars.$color-yellow;
  }

  #u3 {
    background-color: vars.$color-orange;
  }

  .icon {
    width: 130px;
    height: 130px;
    border-radius: 100%;
    background-color: vars.$color-gray;
    position: absolute;
    top: -20px;

    img {
      position: absolute;
      width: 80%;
      height: 80%;
      transform: translate(10%, 10%);
    }
  }

  #arrow {
    position: absolute;
    right: 45px;
    top: 50%;
    transform: translateY(-50%);

    img {
      width: 40px;
      height: 200px;
      object-fit:fill;
      filter: invert(1)
    }
  }

</style>